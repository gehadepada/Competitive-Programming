//vector<long long>lucky;
ll mini ( int i, int  n, vector<ll>&cost, vector<ll>&dp , int k )
{

    if(i >=n-1)
    {
        return 0;
    }
    if(dp [ i ] != -1)
    {
        return dp[i];
    }
    ll minii=1e9;
    for(int j = 1; j<=k ;j ++)
    {
        if(j+i< n){
        minii=min(minii , abs(cost[j+i] - cost[i]) + mini( j+i , n , cost , dp , k));
        }
    }

   return  dp[i]=minii;
}




int main()
{
    /// سنصل وستبقي المعاناة ذكري///
    //freopen("mex.in","rt",stdin);
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    // x+y-1/y
    int t = 1;
   // cin>>t;
    while(t--)
    {
        ll n, k;
        cin >> n >> k ;
        vector<ll>cost(n);
        for(int i =0 ; i < n ; i++)
        {
            cin >> cost[i];
        }
        vector<ll>dp(n+1, -1);
        cout<<mini( 0 , n , cost  ,dp , k)<<"\n";



    }
}
